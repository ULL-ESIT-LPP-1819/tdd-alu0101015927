task :default => :spec

desc "Ejecutar las espectativas de la clase Individuo"
task :spec do
  sh "rspec -I. spec/individuo_spec.rb"
end

desc "Ejecutar las espectativas de la clase List"
task :list do
  sh "rspec -I. spec/lista_spec.rb"
end

desc "Ejecutar las espectativas de la clase Tag"
task :tag do
  sh "rspec -I. spec/etiqueta_spec.rb"
end
